# ---- App core ----
APP_NAME=Invo-Wise
APP_ENV=local             # local | dev | prod
APP_DEBUG=true

# ---- API ----
API_HOST=0.0.0.0
API_PORT=8000
API_BASE_URL=http://127.0.0.1:8000

# ---- Logging ----
LOG_LEVEL=INFO            # DEBUG | INFO | WARNING | ERROR
LOG_FORMAT=simple         # simple | json

# ---- Data & Storage ----
DATA_PATH=./data          # where local invoices are saved
UPLOAD_MAX_SIZE_MB=2

# ---- AWS (future use) ----
AWS_REGION=eu-central-1
AWS_S3_BUCKET=invo-wise-dev
AWS_PROFILE=default

# ---- External APIs (future integrations) ----
OPENAI_API_KEY=           # for text/summary generation
ANTHROPIC_API_KEY=        # optional Bedrock/Claude support
# AZURE_OPENAI_API_KEY=   # optional alternative key
# GOOGLE_API_KEY=         # optional translation/ocr experiments

# ---- Security / Misc ----
ALLOW_ORIGINS=http://127.0.0.1,http://localhost:3000
SECRET_KEY=changeme       # placeholder for signing tokens

# ---- Versioning ----
APP_VERSION=0.1.0
BUILD_DATE=2025-11-07
